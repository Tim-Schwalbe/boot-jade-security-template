extends ../layout/layout.jade
block title
  | template | Forgot password
block headline
  | Forgot password
block content
  .row
    .col-md-offset-4.col-md-4
      form#loginForm.form-signin(role='form', action='#{_contextPath}/forgot_password', method='post', data-toggle="validator")
        input(type="hidden", name=_csrf.parameterName, value=_csrf.token)
        h3.form-signin-heading &nbsp;
        .form-group
          input.form-control(type='email', name='email', placeholder='E-Mail', required='true', autofocus='')
          .help-block.with-errors
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Recover password
